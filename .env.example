# Stock Model - API Keys & Configuration
# Copy this file to .env and fill in your values

# FRED (Federal Reserve Economic Data)
# Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# Finnhub (Financial News & Data)
# Get your key at: https://finnhub.io/register
FINNHUB_API_KEY=your_finnhub_api_key_here

# Robinhood Credentials
ROBINHOOD_USERNAME=your_email@example.com
ROBINHOOD_PASSWORD=your_password_here
# Optional: TOTP secret for 2FA (base32 encoded)
ROBINHOOD_TOTP_SECRET=

# SEC EDGAR (required: your email for User-Agent header)
SEC_EDGAR_USER_AGENT=YourName your_email@example.com

# Database
DB_PATH=data/stock_model.db

# Logging
LOG_LEVEL=INFO
LOG_DIR=data/logs

# Cache
CACHE_DIR=data/cache
